{
    "plugins": [
        "toc",
        "numbered-headings",
        "layout",
        "anchors",
        "link-checker"
    ],
    "pluginsConfig": {
        "toc": {
            "addClass": true,
            "className": "toc"
        },
        "layout": {
            "headerPath": "layouts/header.html",
            "footerPath": "layouts/footer.html"
        },
        "pluginsConfig": {
            "link-checker": {
                "dieOnError": true
            }
        }
    }
}